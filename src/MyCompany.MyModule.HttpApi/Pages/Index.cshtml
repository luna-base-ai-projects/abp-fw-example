@page
@model MyCompany.MyModule.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body p-5 text-center">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <i class="fas fa-home fa-4x text-primary mb-4"></i>
                    <h1 class="display-4 fw-bold text-dark mb-3">Welcome to MyModule</h1>
                    <p class="lead text-muted mb-4">
                        Your ABP framework module is now running with a beautiful web interface!
                    </p>

                    <div class="row g-4 mt-4">
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <i class="fas fa-cogs fa-2x text-primary mb-3"></i>
                                    <h5>API Endpoints</h5>
                                    <p class="small text-muted">Access your module's REST API</p>
                                    <a href="/api/my-module/example" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-external-link-alt me-1"></i>Test API
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <i class="fas fa-user-shield fa-2x text-success mb-3"></i>
                                    <h5>Authentication</h5>
                                    <p class="small text-muted">Secure login system</p>
                                    <a href="/Account/Login" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-sign-in-alt me-1"></i>Login Page
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <i class="fas fa-chart-bar fa-2x text-info mb-3"></i>
                                    <h5>Dashboard</h5>
                                    <p class="small text-muted">Module statistics and info</p>
                                    <button class="btn btn-outline-info btn-sm" disabled>
                                        <i class="fas fa-chart-line me-1"></i>Coming Soon
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5">
                        <h6 class="text-muted">Module Information</h6>
                        <div class="row text-start mt-3">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <strong>Module Name:</strong> MyCompany.MyModule<br>
                                    <strong>Version:</strong> 1.0.0<br>
                                    <strong>Framework:</strong> ABP Framework
                                </small>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <strong>Status:</strong> <span class="text-success">Active</span><br>
                                    <strong>Environment:</strong> Development<br>
                                    <strong>Port:</strong> 5000
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>